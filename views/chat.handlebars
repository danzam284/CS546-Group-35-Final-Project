<!DOCTYPE html>
<html>

<head>
    <title>Chat for {{class}}</title>
</head>

<body>
    <h1>Chat for {{class}}</h1>

    <div id="chat-container">
        <div id="chat-messages">
            {{#each messages}}
            <p><strong>'{{this.user}}':</strong> {{this.text}} <em>({{this.timestamp}})</em></p>
            {{/each}}
        </div>
        <form id="chat-input" action="/chat/{{course}}" method="POST">
            <input type="text" name="message" id="message-input" placeholder="Type your message..." required>
            <button type="submit" id="send-button">Send</button>
        </form>
    </div>

</body>

</html>